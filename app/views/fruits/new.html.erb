<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Add more fruits and vegetables!</h1>
  <br />
  <%= simple_form_for @fruit do |f| %>
    <%= f.input :name, placeholder: 'Orange' %> 
    <%= f.input :fruitorveggie, :label => 'Fruit or vegetable?', as: :radio_buttons,
    collection: ['Fruit', 'Vegetable'], wrapper: :vertical_radio_and_checkboxes %>
    <%= f.input :benefits, placeholder: 'High in Vitamin C' %>
    <br />
    <%= f.submit 'Add', class: 'btn btn-primary' %>
  <% end %>
</div>

