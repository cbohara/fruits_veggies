<h1 class="booyah-box col-xs-10 col-xs-offset-1">Learn about the health benefits of fruits and vegetables!</h1>

<% @fruits.each do |fruit| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h2><%= fruit.name %></h2>
    <br />
    <p><%= fruit.fruitorveggie %></p>
    <p><%= fruit.benefits %></p>
  </div>

  <hr />
<% end %>

<div class="booyah-box col-xs-10 col-xs-offset-1">
  <%= link_to new_fruit_path do %>
    <i class="glyphicon glyphicon-plus-sign"></i>
    Add more fruits and vegetables to our list!
  <% end %>
</div>